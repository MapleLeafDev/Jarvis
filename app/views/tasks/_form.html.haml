:javascript
  function setMonthlyOccurance(){
    if ($('#monthly').is(':checked')) {
      $('#weekly').attr("checked", false);
      $('#daily').attr("checked", false);
      $('#sunday').attr("checked", false);
      $('#monday').attr("checked", false);
      $('#tuesday').attr("checked", false);
      $('#wednesday').attr("checked", false);
      $('#thursday').attr("checked", false);
      $('#friday').attr("checked", false);
      $('#anytime').attr("checked", true);
      return $('#saturday').attr("checked", false);
    }
  };

  function setWeeklyOccurance(){
    if ($('#weekly').is(':checked')) {
      $('#monthly').attr("checked", false);
      $('#daily').attr("checked", false);
      $('#sunday').attr("checked", false);
      $('#monday').attr("checked", false);
      $('#tuesday').attr("checked", false);
      $('#wednesday').attr("checked", false);
      $('#thursday').attr("checked", false);
      $('#friday').attr("checked", false);
      $('#anytime').attr("checked", true);
      return $('#saturday').attr("checked", false);
    }
  };

  function setDailyOccurance(){
    if ($('#daily').is(':checked')) {
      $('#weekly').attr("checked", false);
      $('#monthly').attr("checked", false);
      $('#sunday').attr("checked", false);
      $('#monday').attr("checked", false);
      $('#tuesday').attr("checked", false);
      $('#wednesday').attr("checked", false);
      $('#thursday').attr("checked", false);
      $('#friday').attr("checked", false);
      return $('#saturday').attr("checked", false);
    }
  };

  function setSelectOccurance(){
    if ($('#sunday').is(':checked') || $('#monday').is(':checked') || $('#tuesday').is(':checked') || $('#wednesday').is(':checked') || $('#thursday').is(':checked') || $('#friday').is(':checked') || $('#saturday').is(':checked')) {
      $('#daily').attr("checked", false);
      $('#weekly').attr("checked", false);
      return $('#monthly').attr("checked", false);
    }
  };

= form_for(@task) do |f|
  - if @task.errors.any?
    .text-error
      #error_explanation
        = pluralize(@task.errors.count, "error")
        prohibited this chore from being saved:
        %ul
          - @task.errors.full_messages.each do |msg|
            %li= msg
  %table.table
    %tr
      %td
        .span3
          Name
        .span3
          = f.collection_select :user_id, @users, :id, :name, selected: params[:user_id]
    %tr
      %td
        .span3
          Title
        .span3
          = f.text_field :title
    %tr
      %td
        .span3
          Description
        .span3
          = f.text_area :description, rows: "3", maxlength: "255"
    %tr
      %td
        .span3
          Credits
        .span3
          = f.text_field :points, class: "input-mini"
    %tr
      %td
        .span3
          When
        .span3
          %div.well.well-small
            = f.check_box :daily, id: "daily", onclick: "setDailyOccurance();"
            Daily
            %p
            = f.check_box :weekly, id: "weekly", onclick: "setWeeklyOccurance();"
            Weekly
            %p
            = f.check_box :monthly, id: "monthly", onclick: "setMonthlyOccurance();"
            Monthly
          %div.well.well-small
            = f.check_box :sunday, id: "sunday", onclick: "setSelectOccurance();"
            Sunday
            %p
            = f.check_box :monday, id: "monday", onclick: "setSelectOccurance();"
            Monday
            %p
            = f.check_box :tuesday, id: "tuesday", onclick: "setSelectOccurance();"
            Tuesday
            %p
            = f.check_box :wednesday, id: "wednesday", onclick: "setSelectOccurance();"
            Wednesday
            %p
            = f.check_box :thursday, id: "thursday", onclick: "setSelectOccurance();"
            Thursday
            %p
            = f.check_box :friday, id: "friday", onclick: "setSelectOccurance();"
            Friday
            %p
            = f.check_box :saturday, id: "saturday", onclick: "setSelectOccurance();"
            Saturday
          %div.well.well-small
            = f.radio_button :period, 0, id: "anytime"
            %div.label Anytime
            %p
            = f.radio_button :period, 1
            %div.label.label-info Morning
            %p
            = f.radio_button :period, 2
            %div.label.label-success Noon
            %p
            = f.radio_button :period, 3
            %div.label.label-warning Evening
  .actions{align: "right"}
    = f.submit "Save", class: "btn btn-success btn-small"