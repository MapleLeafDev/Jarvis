.panel.panel-default
  .panel-heading
    %h4= t('social_media')
  .panel-body
    .alert.alert-dismissible.alert-warning
      %h4= t('enable_disable_social')
      %p= t('enable_disable_social_info')
    %table.table.table-hover{style: "width:100%;"}
      %tbody
        %tr
          %td= content_tag(:i, " Instagram", class: "fa fa-instagram fa-2x")
          %td{style: "width:50px;"}
            .material-switch{style: 'padding:4px 0px 0px 12px;'}
              -if @user.instagram?
                %input#instagram{:type => "checkbox", :checked => true, onChange: "window.location='#{disable_user_social_medium_path(@user, @user.instagram)}';"}
              -else
                %input#instagram{:type => "checkbox", :checked => false, onChange: "window.location='#{connect_instagram_index_path}';"}
              %label.label-success{:for => "instagram"}
