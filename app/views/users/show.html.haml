:javascript
  $(function () {
    $('[data-toggle="tooltip"]').tooltip()
  })

  function loadingSocialMedia(){
    $("#loading").show();
    $("#user-results").hide();
  };

  function loadingMoreSocialMedia(){
    $("#more-loading").show();
    $("#more-results").hide();
  };

.side-nav
  .panel.panel-default
    .panel-heading
      %h4
        .pull-right
          -if current_user.parent?
            %span{style: "padding-left:10px;"}
              =link_to content_tag(:i, nil, class: "fa fa-cog fa-1x"), edit_user_path(@user), remote: true
        = @user.name
    .panel-body.visible-xs
      %table.table.table-hover
        %thead
          %tr
            %th= t('views.social_media')
            %th{style: "width:32px;"}= link_to content_tag(:i, nil, class: "fa fa-plus fa-1x"), social_medium_users_path(id: @user.id), remote: true
        %tbody
          -if @user.social_medium.any?
            %tr
              %td{colspan: '2'}
                -@user.social_medium.each do |feed|
                  =link_to content_tag(:i, nil, class: "fa fa-#{feed.type_tag.downcase} fa-2x"), user_social_medium_path(@user, feed, {type: 'recent'}), remote: true, onclick: "loadingSocialMedia();"
          -else
            %tr
              %td{colspan: '2', style: 'text-align: center;'}= t('no_social_media')
    .panel-body.hidden-xs
      %div{align: "center"}= image_tag(gravatar_for(@user), class: "img-rounded")
      %table.table.table-hover
        %thead
          %tr
            %th= t('views.social_media')
            %th= link_to content_tag(:i, nil, class: "fa fa-plus fa-1x"), social_medium_users_path(id: @user.id), remote: true
        %tbody
          -if @user.social_medium.any?
            -@user.social_medium.each do |feed|
              %tr
                %td= link_to content_tag(:i, " #{feed.type_tag}", class: "fa fa-#{feed.type_tag.downcase} fa-2x"), user_social_medium_path(@user, feed, {type: 'recent'}), remote: true, onclick: "loadingSocialMedia();"
                %td{style: "width:32px;"}= link_to content_tag(:i,nil, class: "fa fa-remove fa-1x"), user_social_medium_path(@user, feed), method: :delete
          -else
            %tr
              %td{colspan: '2', style: 'text-align: center;'}= t('no_social_media')


.results-nav
  #loading{style: 'display:none;', align: 'center'}
    .panel.panel-default
      .panel-heading
        %h4
          %i.fa.fa-spinner.fa-spin
  #user-results
    .panel.panel-default
      .panel-heading
        %h4= t("activity")
      .panel-body
        -if @user.social_medium_stat
          - @user.social_medium_stat.format_data.each do |k,v|
            = content_tag(:i, " #{k.titleize}", class: "fa fa-#{k} fa-2x")
            = column_chart v, height: "150px"
