.lead{align: "center"}
  .pull-right= link_to "", "", class: "glyphicon glyphicon-remove", data: {dismiss: "modal"}
  %p= SocialMedia::TYPE_NAME[@feed.feed_type]
  .well.well-sm
    %table{width: "100%"}
      %tr
        %td{rowspan: "2"}= image_tag(@feed.picture, size: '40x40', class: "img-rounded")
        %td= @feed.full_name
      %tr
        %td= " ( #{@feed.username} )"
    %p
      %ul.nav.nav-pills
        %li{class: "#{'active' unless params[:type]}"}
          = link_to t('views.home'), user_social_medium_path(@user, @feed), remote: true
        %li{class: "#{'active' if params[:type]}"}
          = link_to t('views.profile'), user_social_medium_path(@user, @feed, type: "recent"), remote: true
#results
  - if @results.any?
    - @results.each do |post|
      .panel.panel-default
        .panel-heading
          %h3.panel-title
            %table{width: "100%"}
              %tr
                %td= image_tag(post.user.profile_picture, size: '30x30', class: "img-rounded")
                %td{align: "right"}= time_ago_in_words(Time.zone.at(post.created_time.to_i))
              %tr
                %td= post.user.username
                %td{align: "right"}
                  %span.glyphicon.glyphicon-heart
                  =post.likes[:count]
        .panel-body
          %div
            = image_tag(post.images.low_resolution.url, class: "feed-img")
            %p= post.caption.text if post.caption
          - post[:comments][:data].each do |comment|
            .media
              %a.pull-left{:href => "http://instagram.com/#{comment.from[:username]}"}
                = image_tag(comment.from[:profile_picture], size: "30x30", class: "img-rounded media-object")
              .media-body
                %h4.media-heading=link_to comment.from[:username], "http://instagram.com/#{comment.from[:username]}"
                = comment.text
  -else
    No Results