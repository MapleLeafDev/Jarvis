- if @results.any?
  -last_post = nil
  - @results.each do |post|
    .panel.panel-default
      .panel-heading
        %h3.panel-title
          .pull-right
            = time_ago_in_words(Time.at(DateTime.parse(post['created_time'])))
          - post_pic = post['from']['id'] == @feed.username ? @feed.picture : post['picture']
          = image_tag(post_pic, size: '30x30', class: "img-rounded")
          = post['from']['name']
      .panel-body
        %div
          %p= post['message'] || post['story']
          -if post['comments']
            %ul.list-group{style: "padding-left:0px;"}
              -post['comments']['data'].each do |comment|
                %li.list-group-item
                  .list-group-item-heading
                    .pull-right
                      =t('likes')
                      .badge= comment['like_count']
                      = time_ago_in_words(Time.at(DateTime.parse(comment['created_time'])))
                    = link_to comment['from']['name'], "http://facebook.com/#{comment['from']['id']}", target: :blank
                  %p.list-group-item-text= comment['message']


  -if last_post
    #more-loading{style: 'display:none;', align: 'center'}
      %div.list-group{style: "width:100%; padding-left:0px; text-align: center;"}
        %h4.list-group-item.active
          %i.fa.fa-circle-o-notch.fa-spin
    #more-results
      %div.list-group{style: "width:100%; padding-left:0px; text-align: center;"}
        %h4= link_to t("load_more"), more_results_user_social_medium_index_path(@user, feed_id: @feed.id, media_id: last_post.id), remote: true, class: "list-group-item active", onclick: "loadingMoreSocialMedia();"
-else
  %div.list-group{style: "width:100%; padding-left:0px; text-align: center;"}
    %h4= t("no_results")
