= form_for(@meal) do |f|
  - if @meal.errors.any?
    #error_explanation
      %h2
        = pluralize(@meal.errors.count, "error")
        prohibited this meal from being saved:
      %ul
        - @meal.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label 'Info'
    = f.text_area :description, rows: "3", maxlength: "255"
  .actions{align: "right"}
    = f.submit "Save", class: "btn btn-small btn-success"