.span6.well.well-small
  %div{align: "center"}
    %h3
      %em= @meal.name
    .muted= @meal.description
  = link_to ' Ingredient', new_ingredient_path(meal: @meal), class: "i icon-plus btn btn-small"
  %p
  %table.table
    %tr
      %th Ingredient
      %th Quantity
    - @ingredients.each do |ingredient|
      %tr
        %td= ingredient.name
        %td= ingredient.quantity
  %p
  = link_to 'Back', meals_path, class: "btn btn-small"
  = link_to ' Edit', edit_meal_path(@meal), class: "i icon-edit btn"