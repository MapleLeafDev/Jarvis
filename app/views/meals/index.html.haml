:javascript
  function assignMeal(id){
    $.ajax({
      url: "#{assign_meal_path}",
      type: "GET",
      data: {menu_day: $('#select-' + id + ' option:selected').text(), id: id},
    })
  };

.span12
  .lead{align: "center"} MENU
  -[@this_week, @next_week].each do |week|
    .span3
      -week.each do |day|
        .panel.panel-default
          .panel-heading
            .pull-right= Date.parse(day.to_s).strftime("%A")
            = day
          .panel-body{align: "center"}
            %em{id: "day-#{day}"}
              - if meal = Meal.find_by_menu_day_and_family_id(day, @family.id)
                = link_to meal.name, edit_meal_path(meal), remote: true
  .span5
    .panel.panel-default
      .panel-heading
        .pull-right= link_to '', new_meal_path, remote: true, class: "glyphicon glyphicon-plus btn btn-default btn-sm"
        = t('views.recipe_box')
      .panel-body
        %table.table
          - @meals.each do |meal|
            %tr
              %td
                = link_to meal.name, edit_meal_path(meal), remote: true
                =select_tag "select-#{meal.id}", options_for_select(([""] + @this_week + @next_week), (meal.menu_day? ? meal.menu_day : "")), onchange: "assignMeal(#{meal.id});" ,class: "input-mini pull-right"