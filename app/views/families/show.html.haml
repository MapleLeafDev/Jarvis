%div{align: "center"}
  %table.table
    %tr
      %td.col-md-2{rowspan: "2"}
        = image_tag(gravatar_for(@family), class: "img-rounded")
      %td
        .lead
          .pull-right
            = link_to " #{t('views.link')}", @access_url, class: "glyphicon glyphicon-new-window btn btn-default"
            -if current_user.parent?
              =link_to "", multi_families_path(id: @family.id), remote: true, class: "glyphicon glyphicon-cog btn btn-default"
          = t('views.blank_family', family: @family.name)
    %tr
      %td

%ul.nav.nav-tabs{:role => "tablist"}
  %li.active
    %a{"data-toggle" => "tab", :href => "#members", :role => "tab"}= t('views.members')
  %li
    %a{"data-toggle" => "tab", :href => "#activity", :role => "tab"}= t('views.activity')
  %li
    %a{"data-toggle" => "tab", :href => "#tasks", :role => "tab"}= t('views.tasks')

.tab-content
  #members.tab-pane.fade.in.active
    -@family.users.each do |user|
      =render partial: 'card', locals: { user: user }
  #activity.tab-pane.fade
    = render partial: 'activities', locals: { activities: @family.activities.reverse }
  #tasks.tab-pane.fade
    = render partial: 'users/tasks', locals: { family: @family, user: @current_user, tasks: @family.todays_tasks, section: t('views.tasks') }
