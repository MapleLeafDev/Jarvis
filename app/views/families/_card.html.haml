%div.well.well-sm
  %table{width: "100%"}
    %tr
      %td.col-md-2{rowspan: "2"}
        =link_to image_tag(gravatar_for(user), class: "img-rounded"), user_path(user)
      %td
        .lead
          .pull-right
            -if user.parent?
              .label.label-primary= t('views.parent')
            -else
              .label.label-success{id: "credits"}
                = "#{user.credits || 0} #{t('views.credits')}"
          = link_to user.name, user_path(user)
    %tr
      %td
        .pull-right
          -if current_user.parent?
            =link_to "", multi_users_path(id: user.id), remote: true, class: "glyphicon glyphicon-cog btn btn-default"
        - progress = user.task_progress
        %div{style: "margin-right:60px;"}
          .progress
            .progress-bar{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "#{progress}", :role => "progressbar", :style => "width: #{progress}%;"}