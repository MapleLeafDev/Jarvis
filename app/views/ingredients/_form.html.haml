= form_for(@ingredient) do |f|
  - if @ingredient.errors.any?
    #error_explanation
      %h2
        = pluralize(@ingredient.errors.count, "error")
        prohibited this ingredient from being saved:
      %ul
        - @ingredient.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :category
    = f.text_field :category
  .field
    = f.label :quantity
    = f.number_field :quantity
  .field.hidden
    = f.label :meal_id
    = f.number_field :meal_id
  .actions{align: "right"}
    = f.submit "Save", class: "btn btn-small btn-success"