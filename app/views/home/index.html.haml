.jumbotron{align: "center"}
  %p.lead JARVIS
  = form_tag sessions_path do
    .form-group
      = email_field_tag :email, '', placeholder: t('views.email'), class: "form-control"
    .form-group
      = password_field_tag :password, '', placeholder: t('views.password'), class: "form-control"
    %button.btn.btn-primary.btn-sm{:type => "submit"}= t('views.sign_in')
