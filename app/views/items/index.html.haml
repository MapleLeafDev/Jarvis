.span8{align: "center"}
  .row
    .span5
      %h2.lead Store
    .span2.well.well-small{id: "credits"}
      .lead
        = current_user.credits
        credits
    -if current_user.user_type >= 20
      .row.span7{align: "right"}
        = link_to " Item", new_item_path, class: "i icon-plus btn btn-small btn-comment"
  .row
    .span10
      %ul.nav.nav-tabs
        %li.active
          %a{:href => "#"} Items
        %li
          = link_to 'Purchases', purchases_path
.row
  .span10
    %h4 Items
    %p
      -@items.sort_by{ |t| t.price }.each do |item|
        =render partial: 'item', locals: { item: item }