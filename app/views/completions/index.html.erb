<h1>Listing completions</h1>

<table>
  <tr>
    <th>User</th>
    <th>Task</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @completions.each do |completion| %>
  <tr>
    <td><%= completion.user_id %></td>
    <td><%= completion.task_id %></td>
    <td><%= link_to 'Show', completion %></td>
    <td><%= link_to 'Edit', edit_completion_path(completion) %></td>
    <td><%= link_to 'Destroy', completion, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

