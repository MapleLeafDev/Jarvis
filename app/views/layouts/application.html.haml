!!!
%html
  %head
    %title Home Manager
    <!--[if IE]><script scr="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script><![endif]-->
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
.navbar.navbar.navbar-fixed-top
  .navbar-inner
    .container
      %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.brand{:href => "#{root_url}"} Home Manager
      .nav-collapse
        %ul.nav
          -if current_user
            %li= link_to "Tasks", tasks_path
            %li= link_to "Family Members", users_path
            %li= link_to "User Profile", user_path(current_user)
.container
  .row
    .span8
      -if flash.count > 0
        .alert.fade.in.alert-info
          -flash.each do |name, msg|
            =content_tag :div, msg, :id => "flash_#{name}"
    =yield