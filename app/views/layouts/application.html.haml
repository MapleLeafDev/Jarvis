        ga('send', 'pageview');

%body
  #wrapper
    .navbar.navbar-default.navbar-fixed-top{:role => "navigation"}
      .navbar-header
        %button.navbar-toggle.collapsed{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
          %span.sr-only
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %a.navbar-brand{href: ""}= 'ML Family'
      .collapse.navbar-collapse
        %ul.nav.navbar-nav.navbar-right{style: "margin-right:20px;"}
          %li{class: "#{'active' if params[:controller] == 'families'}"}
            -if current_user.family
              = link_to t('family'), family_path(current_user.family)
            -else
              = link_to t('family'), new_family_path, remote: true
          %li{class: "#{'active' if params[:controller] == 'users'}"}
            = link_to t('profile'), current_user
          %li= link_to t('sign_out'), signout_path
        .collapse.navbar-collapse.navbar-ex1-collapse

    #page-wrapper
      .container-fluid
        = yield

    .container{style: "position:fixed; top:70px; right:0px; width:25%;"}
      -if flash.count > 0
        -flash.each do |name, msg|
          -if flash[:notice]
            .flash.alert.alert-info{align: "center"}
              =content_tag :div, msg, :id => "flash_#{name}"
          -else
            .flash.alert.alert-danger{align: "center"}
              =content_tag :div, msg, :id => "flash_#{name}"

    #modal.modal.fade
      .modal-dialog
        #inner-modal.modal-content
