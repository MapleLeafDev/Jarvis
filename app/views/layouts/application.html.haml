!!!
%html
  %head
    %title Jarvis
    <!--[if IE]><script scr="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script><![endif]-->
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
.navbar.navbar-inverse.navbar-fixed-top
  .navbar-inner
    .container
      %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.brand{:href => "#{root_url}"} Jarvis
      .nav-collapse
        %ul.nav
          -if current_user
            %li= link_to "My Profile", user_path(current_user)
            - family_member = FamilyMember.find_by_user_id(current_user.id)
            -if family_member
              %li= link_to current_user.family.name + " Family", family_path(Family.find_by_id(family_member.family_id))
              %li= link_to "Store", items_path
            -else
              %li= link_to "Create Family", new_family_path
            %li= link_to '| Sign Out |', signout_path
    .container{style: "position:fixed; top:50px; right:10px; width:300px;"}
      -if flash.count > 0
        .alert.fade.in.alert-success{align: "center"}
          -flash.each do |name, msg|
            =content_tag :div, msg, :id => "flash_#{name}"
.container
  .row
    =yield