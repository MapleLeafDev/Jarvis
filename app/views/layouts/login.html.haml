!!!
%html.login
  %head
    %title= t("family")
    <!--[if IE]><script scr="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script><![endif]-->
    = stylesheet_link_tag "application", :media => "all"
    = stylesheet_link_tag "//netdna.bootstrapcdn.com/twitter-bootstrap/2.2.2/css/bootstrap-responsive.min.css"
    = javascript_include_tag "application"
    = csrf_meta_tags
    %link{:href => "/apple-touch-icon.png", :rel => "apple-touch-icon", :sizes => "180x180"}/
    %link{:href => "/favicon-32x32.png", :rel => "icon", :sizes => "32x32", :type => "image/png"}/
    %link{:href => "/favicon-16x16.png", :rel => "icon", :sizes => "16x16", :type => "image/png"}/
    %link{:href => "/manifest.json", :rel => "manifest"}/
    %link{:color => "#5bbad5", :href => "/safari-pinned-tab.svg", :rel => "mask-icon"}/
    %meta{:content => "#ffffff", :name => "theme-color"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
    %meta{:content => "yes", :name => "apple-mobile-web-app-capable"}
  %body
    %nav.navbar.navbar-default.navbar-fixed-top{:role => "navigation"}
      .navbar-header
        %a.navbar-brand
          = image_tag("/assets/leaf_vectorized.png", size: "40x40", style: "margin-top:-10px;")
          = t("family")
    = yield

    .container{style:  "position:fixed; top:70px; right:0px; width:200px;"}
      -if flash.count > 0
        -flash.each do |name, msg|
          -if flash[:notice]
            .flash.alert.fade.in.alert-info{align: "center"}
              =content_tag :div, msg, :id => "flash_#{name}"
          -else
            .flash.alert.fade.in.alert-danger{align: "center"}
              =content_tag :div, msg, :id => "flash_#{name}"
    #modal.modal.fade{style: "left:50%;margin-left:-150px;"}
      .modal-dialog
        #inner-modal.modal-content{style: 'width:300px;'}
