.row.home-row
  .col-md-6{align: 'center'}
    %h1
      = image_tag("/assets/leaf_vectorized.png", size: "200x200", style: "margin-top:-10px;")
      = t("family")
  .col-md-6{align: 'center'}
    .panel.panel-default
      .panel-heading
        %h4= t('sign_in')
      .panel-body
        %form#sign-in.form-horizontal{"accept-charset" => "UTF-8", :action => sessions_path, "data-remote" => "true", :method => "post", :role => "form"}
          %div{:style => "display:none"}
            %input{:name => "utf8", :type => "hidden", :value => "âœ“"}/
          .form-group{style: "margin-bottom:0px;"}
            %label.col-md-3.control-label
            .col-md-9{align: 'center'}
              .error
          .form-group
            %label.col-md-3.control-label{:for => "email"}= t('email')
            .col-md-9
              %input#email.form-control{:type => "text", :name => 'email', :value => params[:email]}
          .form-group
            %label.col-md-3.control-label{:for => "password"}= t('password')
            .col-md-9
              %input#password.form-control{:type => "password", :name => 'password', :value => params[:password]}
          %div{align: 'right'}
            .btn-group.btn-group-justified{style: 'width:200px;'}
              =link_to t('sign_in'), "#", class: "btn btn-primary", onclick: "$('#sign-in').submit();"
              =link_to t('cancel'), "/", class: "btn btn-info"
