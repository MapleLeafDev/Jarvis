.modal-header
  %h3= t('sign_in')
.modal-body
  = form_tag sessions_path do
    .form-group
      = email_field_tag :email, '', placeholder: t('email'), class: "form-control"
    .form-group
      = password_field_tag :password, '', placeholder: t('password'), class: "form-control"
    %div{align: 'right'}
      %button.btn.btn-primary{:type => "submit"}= t('sign_in')
